		"react-scripts": "^3.4.0",
		"redux": "^4.0.5",
		"redux-thunk": "^2.3.0"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"linting": "eslint src",
		"prettier": "prettier \"src/**/*.{js,css}\"",
